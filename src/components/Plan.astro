---
const { title, aporte, description } = Astro.props;
---

<div class="flex flex-col items-center justify-center border-2 rounded w-1/3 h-64 mx-auto mb-5">
  <h1 class="font-bold text-2xl">{title}</h1>
  <hr class="w-4/5 border-t-2 border-gray-400 my-2 mx-auto" />
  <div class="w-4/5 mx-auto">
    <p class="text-dark-secondary">{description}</p>
    <p class="text-dark-primary font-bold text-center text-xl my-5">{aporte}</p>
  </div>
</div>