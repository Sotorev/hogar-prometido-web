---
import { Image } from "astro:assets";

const { title, description, image, href } = Astro.props;
---

<div class="flex flex-col items-center justify-center">
  <a href=`${href}`
    ><Image
      src={image}
      alt="A picture"
      width="240"
      class="rounded-full object-cover md:w-60 md:h-60"
    />
  </a>
  <h1>{title}</h1>
  <p class="text-dark-primary">{description}</p>
</div>
