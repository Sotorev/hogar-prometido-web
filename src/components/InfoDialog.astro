---
import { Image } from "astro:assets";

const { title, description, image } = Astro.props;
---

<div class="flex flex-col items-center justify-center">
  <Image src={image} alt="A picture of a cat" width="240" class="rounded-2xl object-cover md:w-60 md:h-60  "/>
  <h1>{title}</h1>
  <p class="text-dark-primary">{description}</p>
</div>
